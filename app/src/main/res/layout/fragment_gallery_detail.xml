<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gallery_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gallery_image_view_pager_height"
            android:paddingLeft="@dimen/gallery_image_view_pager_padding_left"
            android:paddingRight="@dimen/gallery_image_view_pager_padding_right"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/image_count_txt_margin_right"
            android:layout_marginTop="@dimen/image_count_txt_margin_top"
            android:paddingLeft="@dimen/image_count_txt_padding_left"
            android:paddingRight="@dimen/image_count_txt_padding_right"
            android:background="@drawable/rounded_corner"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_text_size"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/selected_play_video_image"
            android:layout_width="@dimen/play_icon_width"
            android:layout_height="@dimen/play_icon_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/view_pager_video_icon_margin_left"
            android:layout_marginTop="@dimen/view_pager_video_icon_margin_top"
            android:scaleType="fitXY"
            android:src="@drawable/play"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>